@font-face
  font-family: 'FontAwesome'
  src: url('./fonts/fa-solid-900.eot')
  src: url('./fonts/fa-solid-900.eot?#iefix') format('embedded-opentype'),
  url('./fonts/fa-regular-400.woff') format('woff'),
  url('./fonts/fa-regular-400.ttf') format('truetype')
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'Lato-Black'
  src: url('./fonts/Lato-Black.ttf.eot')
  src: url('./fonts/Lato-Black.ttf.eot?#iefix') format('embedded-opentype'),
  url('./fonts/Lato-Black.ttf.woff') format('woff')
  font-weight: normal
  font-style: normal


body
  font-family: 'Lato-Black'
  text-align: center

.container
  width: 84%
  margin: 0 auto

.block__header_main
  text-transform: uppercase

.buttons__column1
  width: 10%
  display: inline-block

.buttons__column2
  width: 15%
  display: inline-block

.buttons__column3
  width: 15%
  display: inline-block

.buttons__column4
  width: 10%
  display: inline-block

.buttons__standart__block
  width: 80%
  margin: 0 auto
  vertical-align: bottom
  margin-top: 209px

.button__standart
  border-radius: 3px
  text-transform: uppercase
  margin: 20px
  display: inline-block

.button__standart__small
  padding: 7px 15px
  font-size: 10px

.button__standart__big
  padding: 10px 32px
  font-size: 12px

.button__standart__red
  color: #e75735
  border: 1px solid #e75735
  background-color: #ffffff
  box-shadow:0 1px 0px 1px #e75735

.button__standart__red:hover,
.button__standart__red_hover
  background-color: #e75735
  border: 1px solid #e75735
  color: #ffffff
  box-shadow:0 1px 0px 1px #bf3e1f

.button__standart__red:active,
.button__standart__red_active
  background-color: #e75735
  border: 1px solid #e75735
  color: #ffffff
  box-shadow: none

.button__standart__blue
  color: #4eb7a8
  border: 1px solid #4eb7a8
  background-color: #ffffff
  box-shadow: 0 1px 0px 1px #28a290

.button__standart__blue:hover,
.button__standart__blue_hover
  background-color:  #4eb7a8
  border: 1px solid #4eb7a8
  color: #ffffff
  box-shadow: 0 1px 0px 1px #28a290

.button__standart__blue_active
  background-color:  #4eb7a8
  border: 1px solid #4eb7a8
  color: #ffffff
  box-shadow: none
